@{
    //load file Layout.cshtml vao day
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}
@* Để phân trang thì using các đối tượng sau *@
@using X.PagedList
@using X.PagedList.Mvc.Core
  <div class="container">
        <div class="col mb-3">
            <div class="e-panel card">
                <div class="card-body">
                    <div class="card-title d-flex align-items-center">
                        <h4 class="mr-2 col-6">Users</h4>
                        <div class="text-center col-6">
                            <a href="/Admin/Users/Create" class="btn btn-success btn-block w-100" type="button"
                                data-toggle="modal" data-target="#user-form-modal">New User</a>
                        </div>
                    </div>


                    <div class="e-table">
                        <div class="table-responsive table-lg mt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>

                                        <th>Photo</th>
                                        <th class="max-width">Fullname</th>
                                        <th class="sortable">Email</th>
                                       
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model)
                                {
                                        <tr>

                                            <td class="align-middle text-center">
                                                <div class="bg-light d-inline-flex justify-content-center align-items-center align-top"
                                                style="width: 35px; height: 35px; border-radius: 3px;"><i
                                                    class="fa fa-fw fa-photo" style="opacity: 0.8;"></i></div>
                                            </td>
                                            <td class="text-nowrap align-middle">@item.Name</td>
                                            <td class="text-nowrap align-middle"><span>@item.Email</span></td>
                                           
                                            <td class="text-center align-middle">
                                                <div class="btn-group align-top">
                                                    <a href="/Admin/Users/Update/@item.Id"
                                                    class="btn btn-sm btn-outline-secondary badge text-dark"
                                                    data-toggle="modal" data-target="#user-form-modal"><i class="align-middle me-2" data-feather="edit-3"></i></a>
                                                    <a href="/Admin/Users/Delete/@item.Id"
                                                    onclick="return window.confirm('Are you sure?');"
                                                    class="btn btn-sm btn-outline-secondary badge text-dark" ><i
                                                        class="fa fa-trash"></i></a>

                                                </div>
                                            </td>
                                        </tr>
                                }


                                </tbody>
                            </table>
                        </div>
                        <div class="d-flex justify-content-center">
                           
                        @Html.PagedListPager((IPagedList)Model,p=>Url.Action("Index", new {page = p}))

                        </div>
                    </div>
                </div>
            </div>
        </div>

        
    </div>